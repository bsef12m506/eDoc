@model termProject.Models.WebUser

@{
    ViewBag.Title = "ViewProfile";
}

@using System;

<div class="container bg-info">
    <div class="col-lg-6">
        <h2>View Profile</h2>
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Password</th>
                        <th>Email</th>
                        <th>Update Info</th>
                        <th>Delete Account</th>
                    </tr>
                </thead>
                <tbody>

                    @{
                        

                        
                            <tr>
                                <td>@Model.Id</td>
                                <td>@Model.name</td>
                                <td>@Model.pwd</td>
                                <td>@Model.email</td>
                                <td>@Html.ActionLink("Update", "UpdateUser2", new { id = Model.Id })</td>
                                <td>@Html.ActionLink("DeleteAccount", "Deleted", new { id = Model.Id })</td>
                            </tr>

                        
                    }



                </tbody>
            </table>
        </div>
    </div>
    <div class="col-lg-6">
    

        @{
            string s = "~/Files/" + Model.Id + ".jpg";

    <img src="@s" />
        }

       </div>
    </div>